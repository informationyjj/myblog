<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blogserver.mapper.LinkMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.blogserver.entity.Link">
        <id column="link_id" property="linkId" />
        <result column="link_name" property="linkName" />
        <result column="avatar_link" property="avatarLink" />
        <result column="blog_link" property="blogLink" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        link_id, link_name, avatar_link, blog_link, description, create_time, status
    </sql>

</mapper>
